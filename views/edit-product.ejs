<main class="mt-3 container">
    <div class="row justify-content-center">
        <div class="col-4 p-3 bg-dark-subtle rounded">
            <h1>Update</h1>
            <p>New product</p>
            <hr>

            <form action="/admin/product/<%= product.id%>?_method=PUT" method="POST">
                <label class="form-label text-dark" for="name">Name</label>
                <input class="form-control mb-3" type="text" id="name" name="name" value="<%= product.name%>"/>

                <label class="form-label text-dark" for="name">Price</label>
                <input class="form-control mb-3" type="number" id="name" name="price" value="<%= product.price%>"/>

                <button class="btn btn-primary float-end w-25" type="submit">Update</button>
            </form>
        </div>
    </div>
</main>