<main class="mt-3 container">
    <div class="row justify-content-center">
        <div class="col-4 p-3 bg-secondary rounded">
            <h1 class="text-white">My products</h1>
            <p class="text-white">List all my product</p>
            <ul class="p-0">
                <% products.forEach((product) => { %>
                    <li class="text-white d-flex justify-content-between product-item">
                        <%= product.name %>
                        <div>
                            <a href="/admin/product/<%= product.id %>" class="link-dark me-3">
                                <i class="fa-solid fa-pen"></i></a>
                            <button class="delete-product" data-id="<%= product.id %>">
                                <i class="fa-solid fa-trash"></i></button>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</main>

<% if (showAlert) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: 'New product inserted',
            showConfirmButton: false,
            timer: 1500 // Close the alert after 1.5 seconds
        })
    </script>
<% } %>


